
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Data Produk</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Data Produk</li>
            </ol>
          </div>
        </div>
      </div>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="mt-4">
                <a href="add_produk" class="d-block">
                <div class="btn btn-primary btn-lg btn-sm">
                  <i href="" class="fas fa-plus"></i>
                  TAMBAH DATA PRODUK
                </div>
                </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                    <th>No</th>
                    <th>Nama Produk</th>
                    <th>Kategori</th>
                    <th>Gambar Produk</th>
                    <th>Harga Normal</th>
                    <th>Harga Diskon</th>
                    <th style="width: 20%">Aksi</th>
                    </tr>

                  </thead>

                  <tbody>                   
                    <% if(data.length){%>
                      <% for(i=0 ; i < data.length; i++){%>
                    <tr>
                      <td><%=data[i].id_product%></td>
                      <td><%=data[i].name_product%></td>
                      <td><%=data[i].kategori%></td>
                      <td><img src ="/public/img/<%=data[i].gambar_product%>" style="width: 150px"></td>
                      <td><%=data[i].price%></td>
                      <td><%=data[i].discount%></td>
                      <td>
                        <a  href="/express/admin/edit_produk/<%- data[i].id_product %>">
                          <div class="btn btn-info btn-sm">                            
                            <i class="fas fa-pencil-alt"></i>
                            Edit
                          </div>
                        </a>
                        <a class="btn btn-danger btn-sm" href="/express/admin/delete_produk/<%= data[i].id_product %>">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                      </td>
                    </tr>
                    <% } } %> 
                  </tbody>
                </table>
            </div>
      <!-- /.card-body -->
      </div>
      <!-- /.card -->
      </div>
      <!-- /.col -->
      </div>
      <!-- /.row -->
      </section>
      <!-- /.content -->